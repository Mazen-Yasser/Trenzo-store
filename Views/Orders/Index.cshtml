@model IEnumerable<TrenzoStore.Models.Entities.Order>
@using TrenzoStore.Models.Entities
@{
    ViewData["Title"] = "My Orders";
    var currentPage = (int)ViewData["CurrentPage"];
    var totalPages = (int)ViewData["TotalPages"];
    var hasPreviousPage = (bool)ViewData["HasPreviousPage"];
    var hasNextPage = (bool)ViewData["HasNextPage"];
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">
                <i class="fas fa-shopping-bag me-2"></i>
                My Orders
            </h2>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-shopping-bag fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">No Orders Yet</h4>
                    <p class="text-muted">You haven't placed any orders yet.</p>
                    <a href="@Url.Action("Index", "Products")" class="btn btn-primary">
                        <i class="fas fa-shopping-cart me-2"></i>
                        Start Shopping
                    </a>
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var order in Model)
                    {
                        <div class="col-12 mb-4">
                            <div class="card">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <div>
                                        <h5 class="mb-1">Order #@order.OrderNumber</h5>
                                        <small class="text-muted">
                                            Placed on @order.OrderDate.ToString("MMMM dd, yyyy")
                                        </small>
                                    </div>
                                    <div class="text-end">
                                        <span class="badge bg-@(order.Status == OrderStatus.Delivered ? "success" : 
                                                               order.Status == OrderStatus.Cancelled ? "danger" : 
                                                               order.Status == OrderStatus.Processing ? "warning" : "primary") fs-6">
                                            @order.Status
                                        </span>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-8">
                                            <h6>Items (@order.OrderItems.Count)</h6>
                                            <div class="row">
                                                @foreach (var item in order.OrderItems.Take(3))
                                                {
                                                    <div class="col-4 mb-2">
                                                        <div class="d-flex align-items-center">
                                                            @if (item.Product.Images.Any())
                                                            {
                                                                <img src="@item.Product.Images.First().ImageUrl" 
                                                                     alt="@item.Product.Images.First().AltText" 
                                                                     class="img-thumbnail me-2" 
                                                                     style="width: 50px; height: 50px; object-fit: cover;">
                                                            }
                                                            else
                                                            {
                                                                <div class="bg-light d-flex align-items-center justify-content-center me-2" 
                                                                     style="width: 50px; height: 50px;">
                                                                    <i class="fas fa-image text-muted"></i>
                                                                </div>
                                                            }
                                                            <div class="flex-grow-1">
                                                                <small class="fw-bold">@item.ProductName</small>
                                                                @if (item.ProductVariant != null)
                                                                {
                                                                    <br><small class="text-muted">@item.ProductVariant.Size, @item.ProductVariant.Color</small>
                                                                }
                                                                <br><small class="text-muted">Qty: @item.Quantity</small>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                                @if (order.OrderItems.Count > 3)
                                                {
                                                    <div class="col-12">
                                                        <small class="text-muted">and @(order.OrderItems.Count - 3) more items...</small>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                        <div class="col-md-4 text-md-end">
                                            <h6>Total: <span class="text-primary">$@order.TotalAmount.ToString("F2")</span></h6>
                                            <div class="mt-3">
                                                <a href="@Url.Action("Details", new { id = order.Id })" 
                                                   class="btn btn-outline-primary btn-sm me-2">
                                                    <i class="fas fa-eye me-1"></i>
                                                    View Details
                                                </a>
                                                @if (order.Status == OrderStatus.Delivered)
                                                {
                                                    <form method="post" action="@Url.Action("Reorder", new { id = order.Id })" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-primary btn-sm">
                                                            <i class="fas fa-redo me-1"></i>
                                                            Reorder
                                                        </button>
                                                    </form>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                @if (totalPages > 1)
                {
                    <nav aria-label="Orders pagination">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(hasPreviousPage ? "" : "disabled")">
                                <a class="page-link" href="@Url.Action("Index", new { page = currentPage - 1 })">
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                            </li>
                            
                            @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                            {
                                <li class="page-item @(i == currentPage ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                                </li>
                            }
                            
                            <li class="page-item @(hasNextPage ? "" : "disabled")">
                                <a class="page-link" href="@Url.Action("Index", new { page = currentPage + 1 })">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            }
        </div>
    </div>
</div>
